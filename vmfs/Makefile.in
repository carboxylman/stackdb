PACKAGE = vmfs
VERSION = 0.1
LIBVERSION = 0.1

SRCDIR		= @srcdir@
TOP_SRCDIR	= @top_srcdir@
OBJDIR		= ..
SUBDIR		= vmfs

XENACCESS_FLAGS = -D ENABLE_XEN -D XA_DEBUG
XENACCESS_A     = $(OBJDIR)/xenaccess/libxenaccess.a
XENACCESS_INC   = $(TOP_SRCDIR)/

include $(OBJDIR)/Makeconf

CFLAGS := -Wall
CFLAGS += -O2
CFLAGS += -g
CFLAGS += $(XENACCESS_FLAGS) -I./ -I$(XENACCESS_INC)

LDFLAGS := -lxenctrl -lxenstore
LDFLAGS += -lebl -lelf -ldw

OBJECTS := config.lo offset.lo web.lo log.lo vmfs.lo

INST_BIN := vmfs

all:	$(OBJECTS) $(INST_BIN)

# Get rid of a bunch of nasty built-in implicit rules.
.SUFFIXES:

include $(TOP_SRCDIR)/Makerules

.c.lo:	$(HEADERS)
	$(LIBTOOL) --mode=compile ${CC} ${CFLAGS} -c $<

vmfs: $(OBJECTS) $(XENACCESS_A)
	$(LIBTOOL) --mode=link \
	$(CC) $(CFLAGS) $(OBJECTS) $(XENACCESS_A) $(LDFLAGS) -o $@

install: def-install

clean:
	$(RM) -rf $(OBJECTS) *.o .libs
	$(RM) -f $(INST_BIN)

.SECONDARY:


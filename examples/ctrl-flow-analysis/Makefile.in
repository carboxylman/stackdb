PACKAGE = ctrl-flow-analysis
LIBVERSION = 0.1

SRCDIR		= @srcdir@
TOP_SRCDIR	= @top_srcdir@
SUBDIR		= examples/ctrl-flow-analysis
OBJDIR		= @top_builddir@

SUBDIRS = 

# Temporary cmdline arg values hard-coded for easiness of testing.
CTRLFLOW_GUEST         = clientA
CTRLFLOW_SYSMAP        = /boot/System.map-2.6.18-xenU
CTRLFLOW_ROOT_BRCTR    = 500433419
CTRLFLOW_ROOT_PIDS     = 296,293,285,1,0
CTRLFLOW_SYSCALL_BRCTR = 482864171
CTRLFLOW_SYSCALL_PID   = 293
CTRLFLOW_SYSCALL_LIST  = $(TOP_SRCDIR)/$(SUBDIR)/syscall-list.txt
CTRLFLOW_CFI_SYSCALL   = sys_sendfile
CTRLFLOW_CFI_BEGIN     = 482862644
CTRLFLOW_CFI_END       = 482864171

include $(OBJDIR)/Makeconf

CFLAGS += -I$(OBJDIR) \
	  -I$(TOP_SRCDIR)/lib \
	  -I$(TOP_SRCDIR)/include \
	  -I$(TOP_SRCDIR)/dwdebug \
	  -I$(TOP_SRCDIR)/target \
      -I$(TOP_SRCDIR)/examples/context-aware-probes \
	  -I$(TOP_SRCDIR)/$(SUBDIR)

CFLAGS += -DDWDEBUG_USE_STRTAB
CFLAGS += $(ELFUTILS_CFLAGS) $(GLIB_CFLAGS)
ifeq ($(ENABLE_XENACCESS),"1")
	CFLAGS += -D ENABLE_XENACCESS $(XENACCESS_FLAGS)
	CFLAGS += -I$(XENACCESS_INC)
endif
ifeq ($(ENABLE_DISTORM),"1")
	CFLAGS += -D ENABLE_DISTORM -D SUPPORT_64BIT_OFFSET 
	CFLAGS += -I$(DISTORM)/include
endif

LDFLAGS += $(ELFUTILS_LDFLAGS) $(GLIB_LDFLAGS)
ifeq ($(ENABLE_XENACCESS),"1")
	LDFLAGS += -lxenctrl -lxenstore -lc -L$(XENACCESS_LIBDIR)
endif
ifeq ($(ENABLE_DISTORM),"1")
	LDFLAGS += -L$(DISTORM)/lib -ldistorm3
endif

HEADERS := $(TOP_SRCDIR)/$(SUBDIR)/debug.h

OBJECTS := 

LIBRARIES := 

PROGRAMS := ctrl-flow-static \
            ctrl-flow-passwd \
            ctrl-flow-root \
			ctrl-flow-syscall \
			ctrl-flow-cfi

STATICLIBS := $(OBJDIR)/examples/context-aware-probes/ctxprobes.a \
              $(OBJDIR)/target/libtarget.a \
              $(OBJDIR)/dwdebug/libdwdebug.a \
              $(OBJDIR)/lib/libvmilib.a
ifeq ($(ENABLE_XENACCESS),"1")
	STATICLIBS += $(XENACCESS_A)
endif

INST_INC = 
INST_LIB = $(LIBRARIES)

# Get libtool to shut up when compiling.
RM=rm -f

all:	$(PROGRAMS) all-subdirs

include $(TOP_SRCDIR)/Makerules

.c.lo:	$(HEADERS)
	@$(LIBTOOL) --tag=CC --mode=compile ${CC} ${CFLAGS} -c $<

ctrl-flow-static: $(HEADERS) $(LIBRARIES) $(OBJECTS) ctrl-flow-static.lo $(STATICLIBS)
	$(LIBTOOL) --mode=link \
	$(CC) -o $@ $(CFLAGS) $(OBJECTS) $@.o $(LIBRARIES) $(STATICLIBS) $(LDFLAGS)

ctrl-flow-passwd: $(HEADERS) $(LIBRARIES) $(OBJECTS) ctrl-flow-passwd.lo $(STATICLIBS)
	$(LIBTOOL) --mode=link \
	$(CC) -o $@ $(CFLAGS) $(OBJECTS) $@.o $(LIBRARIES) $(STATICLIBS) $(LDFLAGS)

ctrl-flow-root: $(HEADERS) $(LIBRARIES) $(OBJECTS) ctrl-flow-root.lo $(STATICLIBS)
	$(LIBTOOL) --mode=link \
	$(CC) -o $@ $(CFLAGS) $(OBJECTS) $@.o $(LIBRARIES) $(STATICLIBS) $(LDFLAGS)

ctrl-flow-syscall: $(HEADERS) $(LIBRARIES) $(OBJECTS) ctrl-flow-syscall.lo $(STATICLIBS)
	$(LIBTOOL) --mode=link \
	$(CC) -o $@ $(CFLAGS) $(OBJECTS) $@.o $(LIBRARIES) $(STATICLIBS) $(LDFLAGS)

ctrl-flow-cfi: $(HEADERS) $(LIBRARIES) $(OBJECTS) ctrl-flow-cfi.lo $(STATICLIBS)
	$(LIBTOOL) --mode=link \
	$(CC) -o $@ $(CFLAGS) $(OBJECTS) $@.o $(LIBRARIES) $(STATICLIBS) $(LDFLAGS)

install: def-install install-subdirs
	$(SUDO) $(CP) -fd libdwdebug.so $(DESTDIR)$(INSTALL_LIBDIR)/

clean: clean-subdirs
	@$(LIBTOOL) --mode=clean rm -f $(OBJECTS) \
	ctrl-flow-static.lo \
	ctrl-flow-passwd.lo \
	ctrl-flow-root.lo \
	ctrl-flow-syscall.lo \
	ctrl-flow-cfi.lo
	$(RM) -f $(PROGRAMS)

distclean: distclean-subdirs

# Temporary cmdlines hard-coded for easiness of testing.

run-static: ctrl-flow-static
	sudo ./ctrl-flow-static \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

demo-static: ctrl-flow-static
	sudo ./ctrl-flow-static \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST) \
	2> /dev/null

verbose-static: ctrl-flow-static
	sudo ./ctrl-flow-static \
	-ddddddddddd -l T_ALL,P_ALL,T_XV \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

debug-static: ctrl-flow-static
	sudo gdb --args ./ctrl-flow-static \
	-ddddddddddd -l T_ALL,P_ALL,T_XV \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

run-passwd: ctrl-flow-passwd
	sudo ./ctrl-flow-passwd \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

demo-passwd: ctrl-flow-passwd
	sudo ./ctrl-flow-passwd \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST) 2> /dev/null

verbose-passwd: ctrl-flow-passwd
	sudo ./ctrl-flow-passwd \
	-ddddddddddd -l T_ALL,P_ALL,T_XV \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

debug-passwd: ctrl-flow-passwd
	sudo gdb --args ./ctrl-flow-passwd \
	-ddddddddddd -l T_ALL,P_ALL,T_XV \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

run-root: ctrl-flow-root
	sudo ./ctrl-flow-root \
	-p $(CTRLFLOW_ROOT_PIDS) -b $(CTRLFLOW_ROOT_BRCTR) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

demo-root: ctrl-flow-root
	sudo ./ctrl-flow-root \
	-p $(CTRLFLOW_ROOT_PIDS) -b $(CTRLFLOW_ROOT_BRCTR) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST) \
	2> /dev/null

verbose-root: ctrl-flow-root
	sudo ./ctrl-flow-root -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-p $(CTRLFLOW_ROOT_PIDS) -b $(CTRLFLOW_ROOT_BRCTR) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

debug-root: ctrl-flow-root
	sudo gdb --args ./ctrl-flow-root -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-p $(CTRLFLOW_ROOT_PIDS) -b $(CTRLFLOW_ROOT_BRCTR) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

run-syscall: ctrl-flow-syscall
	sudo ./ctrl-flow-syscall \
	-p $(CTRLFLOW_SYSCALL_PID) -b $(CTRLFLOW_SYSCALL_BRCTR) \
	-s $(CTRLFLOW_SYSCALL_LIST) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

demo-syscall: ctrl-flow-syscall
	sudo ./ctrl-flow-syscall \
	-p $(CTRLFLOW_SYSCALL_PID) -b $(CTRLFLOW_SYSCALL_BRCTR) \
	-s $(CTRLFLOW_SYSCALL_LIST) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST) \
	2> /dev/null

verbose-syscall: ctrl-flow-syscall
	sudo ./ctrl-flow-syscall -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-p $(CTRLFLOW_SYSCALL_PID) -b $(CTRLFLOW_SYSCALL_BRCTR) \
	-s $(CTRLFLOW_SYSCALL_LIST) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

debug-syscall: ctrl-flow-syscall
	sudo gdb --args ./ctrl-flow-syscall -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-p $(CTRLFLOW_SYSCALL_PID) -b $(CTRLFLOW_SYSCALL_BRCTR) \
	-s $(CTRLFLOW_SYSCALL_LIST) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

run-cfi: ctrl-flow-cfi
	sudo ./ctrl-flow-cfi \
	-b $(CTRLFLOW_CFI_BEGIN) -e $(CTRLFLOW_CFI_END) \
	-s $(CTRLFLOW_CFI_SYSCALL) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

demo-cfi: ctrl-flow-cfi
	sudo ./ctrl-flow-cfi \
	-b $(CTRLFLOW_CFI_BEGIN) -e $(CTRLFLOW_CFI_END) \
	-s $(CTRLFLOW_CFI_SYSCALL) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST) \
	2> /dev/null

verbose-cfi: ctrl-flow-cfi
	sudo ./ctrl-flow-cfi -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-b $(CTRLFLOW_CFI_BEGIN) -e $(CTRLFLOW_CFI_END) \
	-s $(CTRLFLOW_CFI_SYSCALL) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

debug-cfi: ctrl-flow-cfi
	sudo gdb --args ./ctrl-flow-cfi -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-b $(CTRLFLOW_CFI_BEGIN) -e $(CTRLFLOW_CFI_END) \
	-s $(CTRLFLOW_CFI_SYSCALL) \
	-m $(CTRLFLOW_SYSMAP) $(CTRLFLOW_GUEST)

# How to recursively descend into subdirectories to make general
# targets such as `all'.
%.MAKE:
	@$(MAKE) -C $(dir $@) $(basename $(notdir $@))
%-subdirs: $(addsuffix /%.MAKE,$(SUBDIRS)) ;

.PHONY:	$(SUBDIRS)

.SECONDARY:

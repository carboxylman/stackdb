run-pass5: null-deref-pagefault
	sudo ./null-deref-pagefault \
	-b $(NULL_DEREF_PASS5_BRCTR) -p $(NULL_DEREF_PASS5_PID) \
	-a $(NULL_DEREF_PASS5_ADDR) \
	-m $(NULL_DEREF_SYSMAP) $(NULL_DEREF_GUEST)


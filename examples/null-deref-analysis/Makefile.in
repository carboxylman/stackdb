	sudo gdb --args ./null-deref-process -ddddddddddd -l T_ALL,P_ALL,T_XV \
	-p $(NULL_DEREF_PASS2_PIDS) -b $(NULL_DEREF_PASS2_BRCTR) \
	-m $(NULL_DEREF_SYSMAP) $(NULL_DEREF_GUEST)


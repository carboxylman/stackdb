SRCDIR		= @srcdir@
TOP_SRCDIR	= @top_srcdir@
SUBDIR		= tools/bts
OBJDIR		= @top_builddir@

SUBDIRS = 

include $(OBJDIR)/Makeconf

CFLAGS += -I$(TOP_SRCDIR)/target -I$(OBJDIR) -I$(TOP_SRCDIR)/lib \
	-I$(TOP_SRCDIR)/include -I$(TOP_SRCDIR)/dwdebug \
	-I$(TOP_SRCDIR)/$(SUBDIR) -I$(TOP_SRCDIR)/xentt
CFLAGS += $(ELFUTILS_CFLAGS) $(GLIB_CFLAGS)
ifeq ($(ENABLE_XENACCESS),"1")
	CFLAGS += -D ENABLE_XENACCESS $(XENACCESS_FLAGS)
	CFLAGS += -I$(XENACCESS_INC)
endif
ifeq ($(ENABLE_DISTORM),"1")
	CFLAGS += -D ENABLE_DISTORM -D SUPPORT_64BIT_OFFSET 
	CFLAGS += -I$(DISTORM)/include
endif

LDFLAGS += $(ELFUTILS_LDFLAGS) $(GLIB_LDFLAGS)
ifeq ($(ENABLE_XENACCESS),"1")
	LDFLAGS += -lxenctrl -lxenstore -lc -L$(XENACCESS_LIBDIR)
endif
ifeq ($(ENABLE_DISTORM),"1")
	LDFLAGS += -L$(DISTORM)/lib -ldistorm3
endif

HEADERS := $(TOP_SRCDIR)/dwdebug/dwdebug.h \
	$(TOP_SRCDIR)/tools/bts/bts.h

OBJECTS := io.lo symbol.lo bts_dump.lo bts_extract.lo bts_trace.lo

LIBRARIES := 

PROGRAMS := bts_dump bts_extract bts_trace trace_task

STATICLIBS := $(OBJDIR)/target/libtarget.a $(OBJDIR)/dwdebug/libdwdebug.a \
	$(OBJDIR)/lib/libvmilib.a
ifeq ($(ENABLE_XENACCESS),"1")
	STATICLIBS += $(OBJDIR)/xentt/libxentt.a $(XENACCESS_A)
endif

INST_INC = 
INST_LIB = $(LIBRARIES)

# Get libtool to shut up when compiling.
RM=rm -f

all:	$(LIBRARIES) $(PROGRAMS) all-subdirs

include $(TOP_SRCDIR)/Makerules

.c.lo:	$(HEADERS)
	@$(LIBTOOL) --tag=CC --mode=compile ${CC} ${CFLAGS} -c $<

bts_extract: $(HEADERS) $(STATICLIBS) bts_extract.lo
	$(CC) -o $@ $(CFLAGS) $@.o $(STATICLIBS) $(LDFLAGS)

bts_dump: $(HEADERS) $(STATICLIBS) io.lo symbol.lo bts_dump.lo
	$(CC) -o $@ $(CFLAGS) $@.o io.o symbol.o $(STATICLIBS) $(LDFLAGS)

bts_trace: $(HEADERS) $(STATICLIBS) io.lo symbol.o bts_trace.lo
	$(CC) -o $@ $(CFLAGS) $@.o io.o symbol.o $(STATICLIBS) $(LDFLAGS)

replay.o: $(TOP_SRCDIR)/xentt/replay.c
	$(CC) -c -o replay.o $(CFLAGS) $<

trace_task: $(HEADERS) $(STATICLIBS) replay.o symbol.o trace_task.o
	$(CC) -o $@ $(CFLAGS) $@.o replay.o symbol.o $(STATICLIBS) $(LDFLAGS)

install: def-install install-subdirs
	$(INSTALL) bts_dump $(DESTDIR)$(INSTALL_BINDIR)/
	$(INSTALL) bts_extract $(DESTDIR)$(INSTALL_BINDIR)/

clean: clean-subdirs
	@$(LIBTOOL) --mode=clean rm -f $(OBJECTS)
	$(RM) -f $(LIBRARIES) 
	$(RM) -f $(PROGRAMS)

distclean: distclean-subdirs

# How to recursively descend into subdirectories to make general
# targets such as `all'.
%.MAKE:
	@$(MAKE) -C $(dir $@) $(basename $(notdir $@))
%-subdirs: $(addsuffix /%.MAKE,$(SUBDIRS)) ;

.PHONY:	$(SUBDIRS)

.SECONDARY:

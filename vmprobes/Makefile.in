PACKAGE = vmprobes
VERSION = 0.1
LIBVERSION = 0.1

SRCDIR		= @srcdir@
TOP_SRCDIR	= @top_srcdir@
OBJDIR		= ..
SUBDIR		= vmprobes

XENACCESS_FLAGS = -D ENABLE_XEN -D XA_DEBUG
XENACCESS_A     = $(OBJDIR)/xenaccess/libxenaccess.a
XENACCESS_INC   = $(TOP_SRCDIR)/

SUBDIRS = examples

include $(OBJDIR)/Makeconf

CFLAGS := -Wall
CFLAGS += -O2
CFLAGS += -g
CFLAGS += $(XENACCESS_FLAGS)
CFLAGS += -D VMPROBE_i386 
CFLAGS += -D VMPROBE_SIGNAL
#CFLAGS += -D VMPROBE_BENCHMARK
CFLAGS += -D VMPROBE_DEBUG
CFLAGS += -I./ -I$(XENACCESS_INC)

HEADERS := vmprobes.h private.h

OBJECTS := vmprobes.lo

LIBRARIES := libvmprobes.a libvmprobes.so.$(LIBVERSION)

INST_INC = vmprobes.h
INST_LIB = $(LIBRARIES)

all:	$(LIBRARIES) libvmprobes.so all-subdirs

include $(TOP_SRCDIR)/Makerules

.c.lo:	$(HEADERS)
	@$(LIBTOOL) --mode=compile ${CC} ${CFLAGS} -c $<

libvmprobes.a:	$(OBJECTS)
	@$(LIBTOOL) --mode=link $(CC) -o libvmprobes.a $(OBJECTS)

libvmprobes.lo:	$(OBJECTS)
	@$(LIBTOOL) --mode=link ${CC} ${LDFLAGS} -shared -o $@ $(OBJECTS)

libvmprobes.so.$(LIBVERSION):	libvmprobes.lo
	$(CP) -f libvmprobes.lo $@

libvmprobes.so:	libvmprobes.so.$(LIBVERSION)
	$(LN_S) $< $@

install: def-install install-subdirs
	$(SUDO) $(CP) -fd libvmprobes.so $(DESTDIR)$(INSTALL_LIBDIR)/

clean: clean-subdirs
	$(RM) -f $(OBJECTS)
	$(RM) -f $(LIBRARIES) libvmprobes.so libvmprobes.lo
	$(RM) -f $(EXAMPLES)

distclean: distclean-subdirs

# How to recursively descend into subdirectories to make general
# targets such as `all'.
%.MAKE:
	@$(MAKE) -C $(dir $@) $(basename $(notdir $@))
%-subdirs: $(addsuffix /%.MAKE,$(SUBDIRS)) ;

.PHONY:	$(SUBDIRS)

.SECONDARY:
